{
  "name": "SnailKM",
  "version": "1.0.8",
  "description": "Keyboard Configurator for SnailDOS keyboards.",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/SnailKM/SnailKM"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "changelog": "gitmoji-changelog",
    "manual-build": "electron-builder build --win --linux appimage --publish never",
    "snap": "electron-builder build --linux snap --publish never"
  },
  "author": {
    "name": "SnailDOS",
    "email": "snaildos@snaildos.com",
    "url": "https://github.com/SnailKM/SnailKM"
  },
  "build": {
    "win": {
      "target": [
        {
          "target": "squirrel",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    }
  },
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "electron": "22.1.0",
    "electron-builder": "23.6.0",
    "gitmoji-changelog": "2.3.0",
    "electron-builder-squirrel-windows": "23.6.0"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "sudo-prompt": "^9.2.1",
    "update-electron-app": "^2.0.1"
  }
}
